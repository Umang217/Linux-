 
echo "Enter first number: "
read x
echo "Enter second number: "
read y

echo "Choose operation: + - * /"
read op

case $op in
    +) echo "Result: $((x + y))" ;;
    -) echo "Result: $((x - y))" ;;
    \*) echo "Result: $((x * y))" ;;
    /) echo "Result: $((x / y))" ;;
    *) echo "Invalid operation" ;;
esac
